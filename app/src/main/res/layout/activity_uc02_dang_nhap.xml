<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.UC02_DangNhap"
    android:orientation="vertical">

    <ImageView
        android:padding="10dp"
        android:scaleType="fitCenter"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:src="@drawable/uc02_app_icon_and_slogan"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">
    </ImageView>

    <EditText
        android:id="@+id/edittext_username"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/textview1"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/edittext_background_purplestroke"
        android:hint="Nhập username"
        android:textColorHint="@color/purple_200"
        android:padding="15dp"
        android:textStyle="italic"/>

    <EditText
        android:id="@+id/edittext_pass"
        android:layout_width="281dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textColorHint="@color/purple_200"
        android:layout_below="@+id/textview1"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/edittext_background_purplestroke"
        android:hint="Nhập password"
        android:padding="15dp"
        android:textStyle="italic"/>

    <Button
        android:id="@+id/button_dangNhap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng Nhập"
        android:backgroundTint="@color/purple_500"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:textStyle="bold">
    </Button>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="20dp"
            android:textColor="@color/purple_200"
            android:text="Bạn chưa có tài khoản ?"
            android:textSize="20dp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textview_dangNhap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Đăng ký tại đây "
            android:textColor="@color/third_purple"
            android:textColorHint="@color/purple_200"
            android:textSize="20dp"
            android:textStyle="bold |italic" />
    </LinearLayout>

</LinearLayout>


